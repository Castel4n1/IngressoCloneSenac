@model IngressoMVC.Models.ViewModels.RequestDTO.PostFilmeDTO
 
@{
    ViewData["Title"] = "Cadastrar Filme";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Novo Filme</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Criar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Titulo" class="control-label"></label>
                                <input asp-for="Titulo" class="form-control" />
                                <span asp-validation-for="Titulo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DataLancamento" class="control-label"></label>
                                <input asp-for="DataLancamento" type="date" class="form-control" />
                                <span asp-validation-for="DataLancamento" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DataEncerramento" class="control-label"></label>
                                <input asp-for="DataEncerramento" type="date" class="form-control" />
                                <span asp-validation-for="DataEncerramento" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Preco" class="control-label"></label>
                                <input asp-for="Preco" type="number" class="form-control" />
                                <span asp-validation-for="Preco" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageURL" class="control-label"></label>
                                <input asp-for="ImageURL" class="form-control" />
                                <span asp-validation-for="ImageURL" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CinemaId" class="control-label"></label>
                                <select asp-for="CinemaId" class="form-control" asp-items="ViewBag.Cinemas"></select>
                                <span asp-validation-for="CinemaId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoriasId" class="control-label"></label>
                                <select asp-for="CategoriasId" class="form-control" asp-items="ViewBag.Categorias" multiple></select>
                                <span asp-validation-for="CategoriasId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProdutorId" class="control-label"></label>
                                <select asp-for="ProdutorId" class="form-control" asp-items="ViewBag.Produtores"></select>
                                <span asp-validation-for="ProdutorId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AtoresId" class="control-label"></label>
                                <select asp-for="AtoresId" class="form-control"  asp-items="ViewBag.Atores" multiple></select>
                                <span asp-validation-for="AtoresId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Descricao" class="control-label"></label>
                                <textarea asp-for="Descricao" class="form-control"></textarea>
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Cadastrar" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Mostrar Todos</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}
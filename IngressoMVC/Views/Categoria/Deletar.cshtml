@model Categoria

@{
    ViewData["Title"] = "Deletar Categoria";
}

<div class="row">
    <div clas="col-md-8 offset-2">
        <p>
            <h1>Deletar Categoria @Model.Nome</h1>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.Nome)
                </div>
                <div class="form-group">
                    <form asp-action="ConfirmarDeletar">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirmar" class="btn btn-outline-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Listar Todos</a>
                </div>
            </div>
        </div>
    </div>
</div>
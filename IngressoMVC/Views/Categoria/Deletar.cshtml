@model Categoria

@{
    ViewData["Title"] = "Deletar Categoria";
}

<div class="row">
    <div clas="col-md-8 offset-2">
        <p>
            <h1>Deseja realmente deletar a Categoria @Model.Nome ?</h1>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group">
                    <p style="color:red";>Confirmar para apagar a categoria Desejada -></p>
                    @*@Html.DisplayNameFor(model => @Model.Nome)*@
                </div>
                <div class="form-group">
                    <form asp-action="ConfirmarDeletar">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirmar" class="btn btn-outline-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Listar Todos</a>
                </div>
            </div>
        </div>
    </div>
</div>
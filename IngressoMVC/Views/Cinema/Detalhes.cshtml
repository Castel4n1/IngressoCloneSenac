@model Cinema

<div class="row">
    <div class="col-md-2">
        <img class="img-thumbnail" src="@Model.LogoURL" />
    </div>
    <div class="col-md-10">
        <h1>@Model.Nome</h1>
        <p>@Model.Descricao</p>
    </div>

</div>


    @* Carrossel *@
    <div class="row">
        <div id="carouselExampleControls" class="carousel slide col-md-4 offset-md-4" data-ride="carousel">
            <div class="carousel-inner">
                @foreach (var cinema in @Model.Filmes)
                {
                    //se é o primeiro, é ativo
                    if (cinema == Model.Filmes.First())
                    {
                        <div class="carousel-item active">
                            <img src="@cinema.ImageURL" class="d-block w-100">
                        </div>
                    }
                    //se não, são inavitos
                    else
                    {
                        <div class="carousel-item">
                            <img src="@cinema.ImageURL" class="d-block w-100">
                        </div>
                    }
                }



            </div>

            <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </button>

            <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </button>
        </div>
    </div>

@* Fim Carrossel*@